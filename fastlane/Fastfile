update_fastlane

default_platform(:ios)

platform :ios do
  before_all do
    setup_travis
    reset_simulators
    clear_derived_data
  end


  desc "Runs all the tests"
  lane :test do
    scan(
      scheme: "bumpy",
      devices: ["iPhone X"],
      code_coverage: true,
      fail_build: false,
      test_without_building: true
    )
  end
end
